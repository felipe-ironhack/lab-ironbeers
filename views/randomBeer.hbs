
<div class="random-beer-wrapper">

    <img src={{image_url}} />

    <div class="random-beer-info">
        <h2> {{name}} </h2>

        <p class="tagline-info"> {{tagline}} </p>

        <p class="description-info"> {{description}} </p>

        {{#if food_pairing}}
            <div class="food-pairs-list">
                <p><b>Food Pairings:</b></p>
                <ul class="food-pairs">
                {{#each food_pairing}}
                    <li> {{this}} </li> 
                {{/each}}
                </ul> 
            </div>
        {{/if}}

        {{#if brewers_tips}}
            <div class="brewer-tips">
                <p>
                    <b>
                        Brewer tips:
                    </b>
                </p>
                <p>
                    {{brewers_tips}} 
                </p>
            </div>
        {{/if}}



    </div>

</div>


