<div class="random-beer-info">
    {{> beerpartial}}

    {{#if food_pairing}}
        <div class="food-pairs-list">
            <p><b>Food Pairings:</b></p>
            <ul class="food-pairs">
            {{#each food_pairing}}
                <li> {{this}} </li> 
            {{/each}}
            </ul> 
        </div>
    {{/if}}

    {{#if brewers_tips}}
        <div class="brewer-tips">
            <p>
                <b>
                    Brewer tips:
                </b>
            </p>
            <p>
                {{brewers_tips}} 
            </p>
        </div>
    {{/if}}



</div>
