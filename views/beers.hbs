<div class="beer-list">

        {{#each beers}}
            <div class="beer-wrapper">
                 <img src={{image_url}} />
                <div class="beer-wrapper-info">
                    <h4>{{name}} </h4>
                    <p class="tagline-info">{{tagline}} </p>
                    <p class="description-info">{{description}} </p>
                </div>
            </div>   
        {{/each}}
  
</div>